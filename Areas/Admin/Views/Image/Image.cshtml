@model List<Jewelly.Models.ItemMst>
@{
    ViewBag.Title = "Image";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
<h2 class="title--admin">Image</h2>
<hr class="mx-5" />
<div class="search--group">
    <form action="/Admin/CartList/CartList" method="post">
        <input type="text" placeholder="Name" name="oc" class="form-control btn--search btn--search--inquiry" />
        <input type="submit" class="btn btn-primary btn--submit--admin btn--submit--inquiry" value="Search" />
    </form>
</div>
<hr class="mx-5" />
<div class="container container--left">
    @foreach (var item in Model)
    {
        <div class="row list_form mb-4">
            <div class="col-md-3">
                @item.ProdMst.Prod_Type
            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_1" />
            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_2" />
            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_3" />

            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_4" />

            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_5" />

            </div>
            <div class="col-md-1">
                <img src="@item.Img.path_img@item.Img.pic_6" />
            </div>
            <div class="col-sm-3 _ec text_Edit">
                <div class="row">
                    <div class="col-md-6">
                        <a href="" class="btn edit--admin text-center btn--td--gold">
                            <i class="fa-solid fa-pen" style="color: #ffffff;"></i>
                            Edit
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="" class="btn edit--admin text-center btn--td--gold">
                            <i class="fa-solid fa-pen" style="color: #ffffff;"></i>
                            Delete
                        </a>
                    </div>
                </div>
               
               
            </div>
        </div>
    }

</div>

