@model Jewelly.Models.AdminLoginMst
@{
    ViewBag.Title = "General";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">General</h2>
<h6 class="sub--title">[ @Model.userName ]</h6>
<div class="container container--left">
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/Admin/CustomerAdmin/General/@Model.AdminID" method="post">
                <div class="form-group">
                    <label class="form-text" hidden>ID</label>
                    <input type="hidden" class="form-control txt--input" name="id" value="@Model.AdminID" />
                </div>
                <div class="form-group">
                    <label class="form-text">Name</label>
                    <input type="text" class="form-control txt--input" name="name" value="@Model.Name_employee" />
                </div>
                <div class="form-group">
                    <label class="form-text">Email</label>
                    <input type="text" class="form-control txt--input" name="emalID" value="@Model.Email" />
                </div>
                <div class="form-group">
                    <label class="form-text">Phone</label>
                    <input type="text" class="form-control txt--input" name="mobNo" value="@Model.Phone" />
                </div>
                <div class="form-group">
                    <label class="form-text">Birthday</label>
                    <input type="text" class="form-control txt--input" name="dob" value="@Model.Birthday" />
                </div>
                <div class="form-group">
                    <label class="form-text">Address</label>
                    <input type="text" class="form-control txt--input" name="address" value="@Model.Address" />
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control mt-5 btn-primary change--admin" value="Save Change" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>