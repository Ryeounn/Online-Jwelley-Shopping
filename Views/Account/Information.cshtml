﻿@model Jewelly.Models.UserRegMst
@{
    ViewBag.Title = "Information";
}
<div class="container">
    <form action="/Account/Information" method="post" ost" enctype="multipart/form-data">
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="select_avt">
                    <img id="image" src="@Model.Path_photo@Model.photo" name="photo"
                         class="img_avt">
                    <input type="file" class="txtfile mt-3" id="imageFiles" onchange="chooseFile(this)" name="imageFiles" value="@Model.photo" />
                    <p class="note_avt mt-3">Accept file .JPG, .JPEG, .PNG</p>
                </div>
            </div>
            <div class="col-md-4 t--mobile--infor">
                <div class="form-group">
                    <label>Username:</label>

                    <input type="text" class="input_edits form-control txt--input txt_infor username" value="@Model.Username" readonly name="Username" />
                </div>
                <div class="form-group">
                    <label>User First Name:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" name="userLname" placeholder="Last Name" value="@Model.userLname" />
                </div>
                <div class="form-group">
                    <label>User last Name:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" name="userFname" value="@Model.userFname" />
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" name="address" value="@Model.address" />
                </div>
                <div class="form-group">
                    <label>Birthday:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" placeholder="dd/yy/mmmm" name="dob" value="@Model.dob" />
                </div>
            </div>
            <div class="col-md-4 l--mobile--infor">
                <div class="form-group">
                    <label>City:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" value="@Model.city" name="city" />
                </div>
                <div class="form-group">
                    <label>State:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" value="Online" readonly />
                </div>
                <div class="form-group">
                    <label>Phone:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" name="mobNo" value="@Model.mobNo" />
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="input_edits form-control txt--input txt_infor username" name="emailID" value="@Model.emailID" />
                </div>
                <div class="form-group">
                    <label>Current Date:</label>
                    <input type="text" class="input_edits form-control txt--input txt_infor username" readonly value="@Model.cdate" />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button type="submit" name="signin" class="btn--dark--model btn--login btn--save--infor mt-3">Change Information</button>
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>