@model Jewelly.Models.UserRegMst
@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container-fluid">
    <div class="row _text_align">
        <div class="col-md-3"></div>
        <form action="/Account/Information" method="post">
            <div class="col-md-6">
                <div class="_text_align">
                    <div class="form-group">
                        <label>User First Name:</label>
                        <input type="text" class="input_edits form-control txt--input username" name="userLname" placeholder="Last Name" value="@Model.userLname" />
                    </div>
                    <div class="form-group">
                        <label>User last Name:</label>
                        <input type="text" class="input_edits form-control txt--input username" name="userFname" value="@Model.userFname" />
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" class="input_edits form-control txt--input username" name="address" value="@Model.address" />
                    </div>
                    <div class="form-group">
                        <label>Birthday:</label>
                        <input type="text" class="input_edits form-control txt--input dob" placeholder="dd/yy/mmmm" name="dob" value="@Model.dob" oninput="checkBirthday()" />
                    </div>

                    <div class="form-group">
                        <label>City:</label>
                        <input type="text" class="input_edits form-control txt--input username" value="@Model.city" name="city" />
                    </div>

                    <div class="form-group">
                        <label>Phone:</label>
                        <input type="text" class="input_edits form-control txt--input username" name="mobNo" value="@Model.mobNo" />
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" class="input_edits form-control txt--input emailID" name="emailID" value="@Model.emailID" oninput="checkE()" />
                    </div>
                    <div class="form-group edit__mob">
                        <button type="submit" class="btn_change mt-3">Submit</button>
                    </div>
                </div>


            </div>
        </form>
        <div class="col-md-3"></div>
    </div>
</div>
<script>
    function checkBirthday() {
        var dob = document.querySelector('.dob');
        var dateRegex = /^\d{4}-\d{2}-\d{2}$/;
        if (!dateRegex.test(dob.value)) {
            dob.style.border = '1px solid #B80000';
            return false;
        } else {
            dob.style.border = '1px solid green';
            return true;
        }
    }
    function checkE() {
        var email = document.querySelector('.emailID');

        if (!pattern.test(email.value)) {
            email.style.border = '1px solid #B80000';
            return false;
        } else {
            email.style.border = '1px solid green';
            return true;
        }
    }
</script>