@model List<Jewelly.Models.MyPurchase>
@{
    ViewBag.Title = "MyPurchase";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container container--left">
    <div class="row">
        <div class="col-md-12">
            <table class="table _gold">
                <thead>
                    <tr>
                        <td></td>
                        <td class="text--table">Product_Name</td>
                        <td class="text--table">MRP</td>
                        <td class="text--table">Status</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text--table">@item.Name</td>
                            <td class="text--table">@item.Price</td>
                            <td class="text--table">@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
